pipeline {
    agent any
    tools {
        maven '3.9.3'
    }
    environment {
       JAVA_HOME='C:\Program Files\Java\jdk8'   

    }
    stages {
        stage('Build') {
            steps {
                bat 'mvn -version'
                bat 'java -version'
                bat 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                bat './jenkins/scripts/deliver.sh'
                bat 'mvn --version'
            }
        }

    }
}
